{
  "id": "gemini-cli",
  "version": "1.3.0",
  "name": "Google Gemini CLI",
  "description": "Installs Google Gemini CLI and shares host ~/.gemini (auth, settings) with the devcontainer",
  "documentationURL": "https://github.com/lucasacoutinho/dotfiles/tree/main/devcontainer/gemini-cli",
  "keywords": ["gemini", "google", "ai", "cli", "credentials"],
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Version of Gemini CLI to install"
    }
  },
  "mounts": [
    {
      "source": "${localEnv:HOME}/.gemini",
      "target": "/mnt/host-gemini",
      "type": "bind"
    }
  ],
  "installsAfter": ["ghcr.io/devcontainers/features/node"]
}
