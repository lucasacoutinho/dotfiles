{
  "id": "claude-code",
  "version": "1.3.0",
  "name": "Claude Code CLI",
  "description": "Installs Claude Code CLI and shares host ~/.claude (skills, plugins, settings) with the devcontainer",
  "documentationURL": "https://github.com/lucasacoutinho/dotfiles/tree/main/devcontainer/claude-code",
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "cli",
    "credentials"
  ],
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Version of Claude Code CLI to install (e.g., 'latest', '1.0.3')"
    },
    "remoteUser": {
      "type": "string",
      "default": "dev",
      "description": "The remote user in the container (must match devcontainer.json remoteUser)"
    }
  },
  "mounts": [
    {
      "source": "${localEnv:HOME}/.claude",
      "target": "/home/${remoteUser}/.claude",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.claude.json",
      "target": "/home/${remoteUser}/.claude.json",
      "type": "bind"
    }
  ],
  "installsAfter": [
    "ghcr.io/devcontainers/features/node"
  ]
}
